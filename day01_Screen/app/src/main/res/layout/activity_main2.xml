<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorAccent"
    tools:context="com.example.lenovo.day01_screen.Main2Activity">
    
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <android.support.v7.widget.Toolbar
           android:id="@+id/too2"
           android:layout_width="match_parent"
           android:layout_height="@dimen/dp_64"
           android:background="@color/color"
           >
           <TextView
               android:id="@+id/me"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textColor="@color/write"
               android:text="我的"
               android:textSize="@dimen/dp_19"
               android:layout_gravity="center"
               />
       </android.support.v7.widget.Toolbar>
       <ImageView
           android:id="@+id/envelope"
           android:layout_width="40dp"
           android:layout_height="26dp"
           android:layout_alignParentRight="true"
           android:src="@mipmap/message"
            android:layout_marginRight="@dimen/dp_17"
           android:layout_marginBottom="@dimen/dp_16"
           android:layout_marginTop="@dimen/dp_17"
           />
   </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/sun"
            android:layout_width="@dimen/dp_70"
            android:layout_height="@dimen/dp_70"
            android:src="@drawable/sun"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_14"
            android:layout_marginBottom="@dimen/dp_17"
            />
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Asyllabear"
            android:textSize="@dimen/dp_20"
            android:textColor="@color/write"
            android:layout_toRightOf="@id/sun"
            android:layout_marginTop="@dimen/dp_20"
            />

        <TextView
            android:id="@+id/signature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/sun"
            android:layout_below="@id/name"
            android:text="厉害厉害厉害了我的哥"
            android:textSize="@dimen/dp_12"
            android:textColor="@color/gray"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_20"
            />

        <ImageView
            android:id="@+id/dayu"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/arrow"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_10"
            />

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_15"></LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:id="@+id/orange"
            android:layout_width="@dimen/dp_345"
            android:layout_height="@dimen/dp_130"

            android:background="@mipmap/banner_bg"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_32"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的米粒"
            android:textSize="@dimen/dp_14"
            android:textColor="#f1f1f1"
            android:layout_marginLeft="@dimen/dp_25"
            android:layout_marginTop="@dimen/dp_10"
            />
        <TextView
            android:id="@+id/ashu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="875"
            android:textSize="@dimen/dp_55"
            android:textColor="@color/write"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_14"
            />
        <TextView
            android:id="@+id/mili"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="米粒"
            android:textSize="@dimen/dp_15"
            android:textColor="@color/write"
            android:layout_toRightOf="@id/ashu"
            android:layout_alignBottom="@id/ashu"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查看详细 》"
            android:textSize="@dimen/dp_18"
            android:textColor="#f1f1f1"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@id/orange"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_6"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color"
        android:orientation="horizontal"
        >
       <RelativeLayout
           android:layout_width="0dp"
           android:layout_weight="1"
           android:layout_height="wrap_content"
           android:layout_marginLeft="@dimen/dp_17"

           >
           <TextView
               android:id="@+id/wen"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="我的问答"
               android:textSize="@dimen/dp_17"
               android:textColor="@color/write"

               />
           <ImageView
               android:layout_width="30dp"
               android:layout_height="30dp"
               android:src="@mipmap/my_question_disabled"
               android:layout_alignParentRight="true"
               />
           <ImageView
               android:layout_width="@dimen/dp_26"
               android:layout_height="@dimen/dp_3"
               android:src="@color/orange"
               android:layout_below="@id/wen"
               android:layout_marginTop="@dimen/dp_10"
               />
       </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_17"
            android:layout_marginRight="@dimen/dp_17"
            >
            <TextView
                android:id="@+id/collect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的收藏"
                android:textSize="@dimen/dp_17"
                android:textColor="@color/write"
                />
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/collection_icons"
                android:layout_alignParentRight="true"
                />
            <ImageView
                android:layout_width="@dimen/dp_26"
                android:layout_height="@dimen/dp_3"
                android:src="@color/orange"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_below="@id/collect"
                />
        </RelativeLayout>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_20"
        >
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_17"

            >
            <TextView
                android:id="@+id/lv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已购旅行"
                android:textSize="@dimen/dp_17"
                android:textColor="@color/write"

                />
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/buy_journey_icons"
                android:layout_alignParentRight="true"
                />
            <ImageView
                android:layout_width="@dimen/dp_26"
                android:layout_height="@dimen/dp_3"
                android:src="@color/orange"
                android:layout_below="@id/lv"
                android:layout_marginTop="@dimen/dp_10"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_17"
            android:layout_marginRight="@dimen/dp_17"
            >
            <TextView
                android:id="@+id/kefu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="联系客服"
                android:textSize="@dimen/dp_17"
                android:textColor="@color/write"
                />
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/service_icons"
                android:layout_alignParentRight="true"
                />
            <ImageView
                android:layout_width="@dimen/dp_26"
                android:layout_height="@dimen/dp_3"
                android:src="@color/orange"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_below="@id/kefu"
                />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_20"
        >
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_17"

            >
            <TextView
                android:id="@+id/neww"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="检测新版本"
                android:textSize="@dimen/dp_17"
                android:textColor="@color/write"

                />
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/new_edition_icons"
                android:layout_alignParentRight="true"
                />
            <ImageView
                android:layout_width="@dimen/dp_26"
                android:layout_height="@dimen/dp_3"
                android:background="@color/orange"
                android:layout_below="@id/neww"
                android:layout_marginTop="@dimen/dp_10"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_17"
            android:layout_marginRight="@dimen/dp_17"
            >
            <TextView
                android:id="@+id/zan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="赞扬/吐槽"
                android:textSize="@dimen/dp_17"
                android:textColor="@color/write"
                />
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/comment_icon"
                android:layout_alignParentRight="true"
                />
            <ImageView
                android:layout_width="@dimen/dp_26"
                android:layout_height="@dimen/dp_3"
                android:src="@color/orange"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_below="@id/zan"
                />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
