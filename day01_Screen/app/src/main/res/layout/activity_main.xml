<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorAccent"
    tools:context="com.example.lenovo.day01_screen.MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/too"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_64"
        android:background="@color/color"
        >
        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="个人信息"
            android:layout_gravity="center"
            android:textSize="@dimen/dp_19"
            android:textColor="@color/write"
            />
        <ImageView
            android:id="@+id/img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@mipmap/back_black"
            />
    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:background="@color/color"
        >
        <TextView
            android:id="@+id/hand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="头像"
            android:textSize="15sp"
            android:textColor="@color/write"
            android:layout_marginTop="@dimen/dp_33"
            android:layout_marginLeft="@dimen/dp_16"
            />

        <ImageView
            android:id="@+id/img_wx"
            android:layout_width="@dimen/dp_71"
            android:layout_height="@dimen/dp_71"
            android:layout_alignParentRight="true"
            android:src="@mipmap/wechat"
            android:layout_marginRight="@dimen/dp_17"
            android:layout_marginTop="@dimen/dp_17"
            android:layout_marginBottom="@dimen/dp_17"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@color/color"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户昵称"
            android:textSize="@dimen/dp_15"
            android:textColor="@color/write"
            android:layout_marginTop="@dimen/dp_19"
            android:layout_marginLeft="@dimen/dp_19"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Asyllaboar"
            android:textSize="@dimen/dp_15"
            android:textColor="@color/colorPrimary"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_19"
            android:layout_marginRight="@dimen/dp_19"

            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@color/color"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="性别"
            android:textSize="@dimen/dp_15"
            android:textColor="@color/write"
            android:layout_marginTop="@dimen/dp_19"
            android:layout_marginLeft="@dimen/dp_19"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="男"
            android:textSize="@dimen/dp_15"
            android:textColor="@color/colorPrimary"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_19"
            android:layout_marginRight="@dimen/dp_19"/>
    </RelativeLayout>

    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_50"
    android:background="@color/color"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="个人简介"
        android:textSize="@dimen/dp_15"
        android:textColor="@color/write"
        android:layout_marginTop="@dimen/dp_19"
        android:layout_marginLeft="@dimen/dp_19"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Salud"
        android:textSize="@dimen/dp_15"
        android:textColor="@color/colorPrimary"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_19"
        android:layout_marginRight="@dimen/dp_19"/>
</RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_20"
        android:background="#111111"
        ></LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@color/color"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改密码"
            android:textSize="@dimen/dp_15"
            android:textColor="@color/write"
            android:layout_marginTop="@dimen/dp_19"
            android:layout_marginLeft="@dimen/dp_19"
            />

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_20"
        android:background="#111111"
        ></LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@color/color"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="退出登录"
            android:layout_centerInParent="true"
            android:textSize="@dimen/dp_15"
            android:textColor="@color/orange"
            android:layout_marginTop="@dimen/dp_18"
            android:layout_marginLeft="@dimen/dp_18"
            />
    </RelativeLayout>



</LinearLayout>
